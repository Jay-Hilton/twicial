<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs well span4" style="margin-top: 30px;">
    <h1>Sign in</h1>
    <%= f.input :email, :required => false, :autofocus => true, placeholder: "myname@example.com" %>
    <%= f.input :password, :required => false, placeholder: "Password" %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Sign in", class: "btn-primary" %>
    <%= link_to "Cancel", :back, class: "btn-cancel" %>
  </div>
<% end %>
