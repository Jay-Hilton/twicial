<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs well span4" style="margin-top: 30px;">
    <div class="page-header">
      <h1>Sign up</h1>
    </div>
    <%= f.input :first_name, :required => true, :autofocus => true, placeholder: "First Name" %>
    <%= f.input :last_name, :required => true, placeholder: "Last Name" %>
    <%= f.input :profile_name, :required => true, placeholder: "Profile Name", :hint => "You can not change it" %>
    <%= f.input :email, :required => true, placeholder: "myname@example.com" %>
    <%= f.input :password, :required => true, placeholder: "Password" %>
    <%= f.input :password_confirmation, :required => true, placeholder: "Password Confirmation" %>
    <%= f.button :submit, "Sign up", class: "btn-primary" %>
    <%= link_to "Cancel", :back, class: "btn-cancel" %>
  </div>
<% end %>
